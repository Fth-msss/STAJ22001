@{
    ViewData["Title"] = "Yeniservis";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Example</title>
    <link rel="stylesheet" href="~/css/serviceform.css">
    
</head>
<body>

    <div class="form-container">
        <form id="myForm">
            <div class="form-group">
                <label for="serviceName">Service Name</label>
                <input type="text" id="serviceName" name="serviceName" required>
            </div>
            <div class="form-group">
                <label for="type">Type</label>
                <select id="type" name="type" required>
                    <option value="">Select a type</option>
                    <option value="type1">Type 1</option>
                    <option value="type2">Type 2</option>
                    <option value="type3">Type 3</option>
                </select>
            </div>
            <div class="form-group">
                <label for="path">Path</label>
                <input type="text" id="path" name="path"  required>
            </div>

            <div class="form-group">
                <label for="path">Query String</label>
                <textarea type="text" id="querystring" name="querystring" required></textarea>
            </div>

            <div class="form-group">
                <label for="path">Header</label>
                <textarea type="text" id="header" name="header" required></textarea>
            </div>

            <div class="form-group">
                <label for="path">Request Body</label>
                <textarea type="text" id="requestbody" name="requestbody" required></textarea>
            </div>

            <div class="form-group">
                <label for="path">Response Body</label>
                <textarea  id="responsebody" name="responsebody" class= "large"  required></textarea>
            </div>

            <div class="form-group">

                <button type="button" onclick="SubmitButtonClick()">send</button>
            </div>
        </form>
    </div>

    
    @section Scripts {
        <script src="~/js/serviceform.js"></script>
    }
</body>
</html>

